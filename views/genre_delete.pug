extends layout

block content
    h1= title

    if genre_books.length

        p #[strong Delete the following books before attempting to delete this genre. ]

        div(style='margin-left: 20px;margin-top: 20px')

            h4 Books

            dl
                each book in genre_books
                    dt
                        a(href=book.url) #{book.title}
                    dd &nbsp; #{book.summary}
    else

        p Are you sure you want to delete genre: #[strong #{genre.name}]?

        form(method='POST' action='')
            input#genreid.form-control(type='hidden', name='genreid', required='true', value=genre._id)
            button.btn.btn-primary(type='submit') Delete